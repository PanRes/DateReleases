<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>mainMenu</servlet-name>
        <jsp-file>/jsps/mainPages/mainMenu.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainMenu</servlet-name>
        <url-pattern>/mainMenu</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addDate</servlet-name>
        <jsp-file>/jsps/mainPages/addDate.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDate</servlet-name>
        <url-pattern>/addDate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>viewSchedule</servlet-name>
        <jsp-file>/jsps/mainPages/viewSchedule.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewSchedule</servlet-name>
        <url-pattern>/viewSchedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editSeries</servlet-name>
        <jsp-file>/jsps/mainPages/editSeries.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>editSeries</servlet-name>
        <url-pattern>/editSeries</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>seriesInfo</servlet-name>
        <jsp-file>/jsps/mainPages/seriesInfo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>seriesInfo</servlet-name>
        <url-pattern>/seriesInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editSeriesServlet</servlet-name>
        <servlet-class>gr.pr.datereleases.servlets.EditSeriesServlet</servlet-class>
    </servlet>s
    <servlet-mapping>
        <servlet-name>editSeriesServlet</servlet-name>
        <url-pattern>/EditSeriesServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>notLoggedInFilter</filter-name>
        <filter-class>gr.pr.datereleases.filters.NotLoggedInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>notLoggedInFilter</filter-name>
        <url-pattern>/jsps/mainPages/*</url-pattern>
        <url-pattern>/jsps/universals/*</url-pattern>
        <url-pattern>/jsps/util/*</url-pattern>
        <servlet-name>mainMenu</servlet-name>
        <servlet-name>addDate</servlet-name>
        <servlet-name>viewSchedule</servlet-name>
        <servlet-name>AddDateServlet</servlet-name>
        <servlet-name>ScheduleServlet</servlet-name>
        <servlet-name>seriesInfo</servlet-name>
        <servlet-name>editSeries</servlet-name>
        <servlet-name>editSeriesServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>parametersNeededFilter</filter-name>
        <filter-class>gr.pr.datereleases.filters.ParametersNeededFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>parametersNeededFilter</filter-name>
        <servlet-name>seriesInfo</servlet-name>
        <servlet-name>editSeries</servlet-name>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>/jsps/login.jsp</welcome-file>
    </welcome-file-list>

</web-app>