<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="gr.pr.datereleases.models.SeriesEpisodesModel" table="series_episodes" schema="test_db">
        <id name="seriesEpisodesId">
            <column name="series_episodes_id" sql-type="int(11)"/>
        </id>
        <property name="season">
            <column name="season" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="episode">
            <column name="episode" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="releaseDate">
            <column name="release_date" sql-type="date"/>
        </property>
        <many-to-one name="seriesBySeriesId" class="gr.pr.datereleases.models.SeriesModel" not-null="true">
            <column name="series_id" not-null="true"/>
        </many-to-one>
        <property name="notes">
            <column name="notes" sql-type="varchar(255)" length="255"/>
        </property>
    </class>

    <sql-query name="SeriesEpisodesModel.findAll">
        <return alias="SeriesEpisodes" class="gr.pr.datereleases.models.SeriesEpisodesModel"/>
        <![CDATA[SELECT se FROM SeriesEpisodes se]]>
    </sql-query>
</hibernate-mapping>