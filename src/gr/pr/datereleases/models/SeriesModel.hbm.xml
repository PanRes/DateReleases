<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="gr.pr.datereleases.models.SeriesModel" table="series" schema="test_db">
        <id name="seriesId">
            <column name="series_id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" not-null="true" unique="true" length="45" sql-type="varchar(45)"/>
        </property>
        <property name="dateStarted">
            <column name="date_started" sql-type="date"/>
        </property>
        <property name="ended">
            <column name="ended" sql-type="tinyint(1)" not-null="true" default="0"/>
        </property>
        <property name="channel">
            <column name="channel" sql-type="varchar(45)" />
        </property>
        <property name="imageUrl">
            <column name="imageUrl" sql-type="varchar(255)"/>
        </property>
        <set name="seriesEpisodesBySeriesId">
            <key>
                <column name="series_id"/>
            </key>
            <one-to-many not-found="ignore" class="gr.pr.datereleases.models.SeriesEpisodesModel"/>
        </set>
        <set name="usersFavoritesSeriesModels">
            <key>
                <column name="series_id"/>
            </key>
            <one-to-many not-found="ignore" class="gr.pr.datereleases.models.UsersFavoritesSeriesModel"/>
        </set>
    </class>
</hibernate-mapping>