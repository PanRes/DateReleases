<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="gr.pr.datereleases.models.UsersModel" table="users" schema="test_db">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="userName">
            <column name="user_name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="password" not-null="true">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="imageUrl">
            <column name="img_url" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="middleName">
            <column name="middle_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(255)" length="255" not-null="true"/>
        </property>
        <set name="usersFavoritesSeriesModels">
            <key>
                <column name="user_id"/>
            </key>
            <one-to-many not-found="ignore" class="gr.pr.datereleases.models.UsersFavoritesSeriesModel"/>
        </set>
    </class>
</hibernate-mapping>